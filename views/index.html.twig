{% include 'header.html.twig' %}
                <h2>Welcome to StyleCONNECT</h2>
                <small class="text-muted">An Interactive Stylist Management System by styleTech Inc.</small>

                <div class="data-table">
            {% if stylists is not empty %}
                    <h4>Your Stylists</h4>
                    <hr>
                    <table class="table table-bordered">
                        <thead class="inverse">
                            <tr>
                                <th>Stylist ID</th>
                                <th>Stylist Name</th>
                                <th>Client List</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for stylist in stylists %}
                            <tr>
                                <td>{{ stylist.getId }}</td>
                                <td>{{ stylist.getName }}</td>
                                <td><a href="/stylists/{{ stylist.getId }}">Check It!</a></td>
                                <td><a href="/stylists/{{ stylist.getId }}/edit">Edit</a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <hr>
            {% else %}
                    <p>Get Hiring! No Stylists Yet!</p>
            {% endif %}
                </div>
                <div class="add-data">
                    <h4>Add a Stylist</h4>
                    <form action="/stylists" method="post">
                        <label for="name">Stylist Name</label>
                        <input id="name" name="name" type="text">

                        <button class="btn btn-success" type="submit">Add Stylist</button>
                    </form>


                </div>

{% include 'footer.html.twig' %}
